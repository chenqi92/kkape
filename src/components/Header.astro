---
import { getLangFromUrl, useTranslations } from '@i18n/index';
import ThemeToggle from './ThemeToggle.astro';
import LanguageToggle from './LanguageToggle.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="sticky top-0 z-50 w-full border-b border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-primary))]/80 backdrop-blur-sm">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href={lang === 'zh' ? '/' : `/${lang}`} class="flex items-center space-x-2">
          <span class="text-2xl">üõ†Ô∏è</span>
          <span class="text-xl font-bold text-[rgb(var(--color-text-primary))]">
            {t('site.title')}
          </span>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <a href={lang === 'zh' ? '/' : `/${lang}`} class="text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-text-primary))] transition-colors">
          {t('nav.home')}
        </a>
        <a href={lang === 'zh' ? '/#tools' : `/${lang}#tools`} class="text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-text-primary))] transition-colors">
          {t('nav.tools')}
        </a>
      </div>

      <div class="flex items-center space-x-3">
        <LanguageToggle />
        <ThemeToggle />
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden btn btn-secondary p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        <a href={lang === 'zh' ? '/' : `/${lang}`} class="text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-text-primary))] transition-colors py-2">
          {t('nav.home')}
        </a>
        <a href={lang === 'zh' ? '/#tools' : `/${lang}#tools`} class="text-[rgb(var(--color-text-secondary))] hover:text-[rgb(var(--color-text-primary))] transition-colors py-2">
          {t('nav.tools')}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
