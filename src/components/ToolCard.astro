---
import type { Tool } from '@data/tools';
import type { Language } from '@i18n/index';
import { useTranslations } from '@i18n/index';

interface Props {
  tool: Tool;
  lang: Language;
}

const { tool, lang } = Astro.props;
const t = useTranslations(lang);

const categoryColors = {
  desktop: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
  library: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  web: 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
  plugin: 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
};

const detailUrl = lang === 'zh' ? `/tools/${tool.slug}` : `/${lang}/tools/${tool.slug}`;
---

<div class="card p-6 h-full flex flex-col animate-fade-in">
  <!-- Icon and Category -->
  <div class="flex items-start justify-between mb-4">
    <div class="text-4xl">{tool.icon}</div>
    <span class={`px-3 py-1 rounded-full text-xs font-medium ${categoryColors[tool.category]}`}>
      {t(`tools.category.${tool.category}`)}
    </span>
  </div>

  <!-- Name and Tagline -->
  <h3 class="text-xl font-bold text-[rgb(var(--color-text-primary))] mb-2">
    {tool.name[lang]}
  </h3>
  <p class="text-sm text-[rgb(var(--color-text-secondary))] mb-4">
    {tool.tagline[lang]}
  </p>

  <!-- Description -->
  <p class="text-[rgb(var(--color-text-secondary))] text-sm mb-6 flex-grow line-clamp-3">
    {tool.description[lang]}
  </p>

  <!-- Tags -->
  <div class="flex flex-wrap gap-2 mb-4">
    {tool.tags.slice(0, 3).map(tag => (
      <span class="px-2 py-1 bg-[rgb(var(--color-bg-secondary))] text-[rgb(var(--color-text-secondary))] text-xs rounded">
        {tag}
      </span>
    ))}
  </div>

  <!-- Actions -->
  <div class="flex flex-wrap gap-2">
    <a href={detailUrl} class="btn btn-primary text-sm flex-1">
      {t('tools.viewDetails')}
    </a>
    {tool.links.website && (
      <a href={tool.links.website} target="_blank" rel="noopener noreferrer" class="btn btn-secondary text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    )}
    {tool.links.github && (
      <a href={tool.links.github} target="_blank" rel="noopener noreferrer" class="btn btn-secondary text-sm">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
        </svg>
      </a>
    )}
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
