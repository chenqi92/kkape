---
import { getLangFromUrl, useTranslations } from '@i18n/index';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-[rgb(var(--color-border))] bg-[rgb(var(--color-bg-secondary))] mt-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <div class="flex items-center space-x-2 mb-4">
          <span class="text-2xl">üõ†Ô∏è</span>
          <span class="text-lg font-bold text-[rgb(var(--color-text-primary))]">
            {t('site.title')}
          </span>
        </div>
        <p class="text-[rgb(var(--color-text-secondary))] text-sm">
          {t('footer.description')}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-[rgb(var(--color-text-primary))] font-semibold mb-4">{t('footer.links')}</h3>
        <ul class="space-y-2">
          <li>
            <a href={lang === 'zh' ? '/' : `/${lang}`} class="text-[rgb(var(--color-text-secondary))] hover:text-primary-600 transition-colors text-sm">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href={lang === 'zh' ? '/#tools' : `/${lang}#tools`} class="text-[rgb(var(--color-text-secondary))] hover:text-primary-600 transition-colors text-sm">
              {t('nav.tools')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-[rgb(var(--color-text-primary))] font-semibold mb-4">{t('footer.connect')}</h3>
        <div class="flex space-x-4">
          <a href="https://github.com/chenqi92" target="_blank" rel="noopener noreferrer" class="text-[rgb(var(--color-text-secondary))] hover:text-primary-600 transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-[rgb(var(--color-border))] text-center text-sm text-[rgb(var(--color-text-secondary))]">
      <p>&copy; {currentYear} {t('site.title')}. All rights reserved.</p>
    </div>
  </div>
</footer>
